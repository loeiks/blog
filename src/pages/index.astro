---
import { getCollection } from "astro:content";
import Link from "~/components/html/Link.astro";
import BaseLayout from "~/layouts/BaseLayout.astro";

// get latest 10 posts sorted by most recent
const allPosts = await getCollection("blog");
const sortedPosts = allPosts
  .sort((a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf())
  .slice(0, 10);
---

<BaseLayout title="Home | @loeiks">
  <div class="flex flex-col gap-4">
    <section class="flex flex-col gap-4">
      <h2 class="text-3xl font-bold">Latest Posts</h2>

      <div class="h-[1px] w-full bg-gray-300"></div>

      <ul class="flex flex-col gap-6">
        {
          sortedPosts.map((post) => (
            <li class="h-auto">
              <div class="flex flex-col">
                <time
                  datetime={post.data.publishDate.toISOString()}
                  class="text-sm text-gray-500 mb-1"
                >
                  {post.data.publishDate.toLocaleDateString("en-US", {
                    year: "numeric",
                    month: "long",
                    day: "numeric",
                  })}
                </time>

                <Link
                  href={`/blog/${post.data.customSlug}`}
                  class="max-w-max hover:text-primary-10"
                >
                  <h3 class="text-2xl font-medium">{post.data.title}</h3>
                </Link>
                {post.data.description && (
                  <p class="text-gray-600">{post.data.description}</p>
                )}
              </div>
            </li>
          ))
        }
      </ul>
    </section>
  </div>
</BaseLayout>
